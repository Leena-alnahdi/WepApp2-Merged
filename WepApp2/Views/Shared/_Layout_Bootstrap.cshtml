@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - معمل الابتكارات</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site_bootstrap.css" rel="stylesheet" />


    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ✅ Navbar with hamburger -->
    <nav class="navbar navbar-expand-lg">
        <div class="nav-container container-fluid">

            <!-- Logo -->
            <div class="logo navbar-brand">
                <div class="logo-icon">
                    <i class="fas fa-flask"></i>
                </div>
                <div class="logo-text">
                    <h2>معمل الابتكارات</h2>
                    <span>بوابتك للتقنيات الحديثة</span><br />
                    <span>جامعة الملك عبدالعزيز</span>
                </div>
            </div>

            <!-- Bootstrap Hamburger Toggle Button -->
            <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="nav-links navbar-nav ms-auto">
                    <a class="nav-link" href="#" onclick="showPage('home')">الرئيسية</a>
                    <a class="nav-link" href="#services" onclick="showPage('home'); setTimeout(() => scrollToSection('services'), 100)">الخدمات</a>
                    <a class="nav-link" href="#devices" onclick="showPage('home'); setTimeout(() => scrollToSection('devices'), 100)">الأجهزة</a>
                    <a class="nav-link" href="#about" onclick="showPage('home'); setTimeout(() => scrollToSection('about'), 100)">عن المعمل</a>
                    <a class="nav-link" href="#faq" onclick="showPage('faq')">الأسئلة الشائعة</a>
                    <a class="nav-link" href="#contact" onclick="showPage('contact')">اتصل بنا</a>
                </div>
                <div class="auth-buttons navbar-nav" id="authButtons">
                    <a class="btn btn-primary nav-link" href="#">
                        <i class="fas fa-user"></i>
                        تسجيل
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main page content -->
    @RenderBody()

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script_bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
